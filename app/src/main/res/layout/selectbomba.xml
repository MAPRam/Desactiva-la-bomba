<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bomba1">



    <Button
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:id="@+id/cablero"
        android:layout_row="45"
        android:layout_column="35"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rojo"
        android:layout_marginTop="58dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/Regresar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="10dp"
        android:id="@+id/cableam"
        android:layout_row="46"
        android:layout_column="35"
        android:background="@drawable/amarillo"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/cablero"
        android:layout_alignLeft="@+id/cablero"
        android:layout_alignStart="@+id/cablero"
        android:layout_alignRight="@+id/cablero"
        android:layout_alignEnd="@+id/cablero" />

    <Button
        android:layout_width="175dp"
        android:layout_height="10dp"
        android:id="@+id/cableaz"
        android:layout_row="47"
        android:layout_column="35"
        android:background="@drawable/azul"
        android:layout_below="@+id/cableam"
        android:layout_alignLeft="@+id/cablero"
        android:layout_alignStart="@+id/cablero"
        android:layout_marginTop="71dp"
        android:layout_alignRight="@+id/cableam"
        android:layout_alignEnd="@+id/cableam" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/muestratext"
        android:textStyle="bold"
        android:textColor="#c62828"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_alignBottom="@+id/cablero"
        android:layout_toLeftOf="@+id/ins"
        android:layout_toStartOf="@+id/ins" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:id="@+id/Regresar"
        android:layout_row="0"
        android:layout_column="37"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ins"
        android:layout_above="@+id/muestratext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/Regresar"
        android:layout_alignStart="@+id/Regresar"
        android:layout_below="@+id/Regresar"
        android:background="@drawable/ins2" />

</RelativeLayout>